<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NeoLosowanie.Views.Pages.NewCommunityPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ContentPage.Content>
        <StackLayout Padding="20,50,20,20" VerticalOptions="FillAndExpand">
            <Label
                Margin="0,20,0,20"
                FontSize="Caption"
                Text="Zanim zaczniesz korzystać z aplikacji, musisz stworzyć przynajmniej jeden zbiór osób!" />
            <Label FontSize="Large" Text="Nazwa zbioru:" />
            <Entry x:Name="nameCommunity" />
            <Button
                Clicked="Button_Clicked"
                Text="Dodaj"
                VerticalOptions="StartAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>